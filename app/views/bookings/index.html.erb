<div class='container'>
  <h1>My Bookings</h1>

  <% if @bookings != nil %>

  <table class='table'>
    <thead>
      <tr>
        <th>Description of booking</th>
        <th>Booking's start date</th>
        <th>Booking's end date</th>
      </tr>
    </thead>
    <% @bookings.each do |booking| %>
    <tr>
      <td><%=booking.description%></td>
      <td><%=booking.start_date.strftime("%e %b %Y %l:%M %p")%></td>
      <td><%=booking.end_date.strftime("%e %b %Y %l:%M %p")%></td>
    </tr>
    <% end %>
  </table>

  <% else %>
    <div>
      <h1>You do not have booking yet.</h1>
    </div>

  <% end %>
</div>
