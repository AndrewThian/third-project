<div class='container'>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3'>
      <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#login">Log in</a></li>
        <li><a data-toggle="tab" href="#signup">Sign up</a></li>
      </ul>



      <div class="tab-content">
          <div id="login" class="tab-pane fade in active">
            <%= render 'sessions/login' %>
            <a data-toggle="tab" href='#forget_password'>Forget password?</a>
          </div>
          <div id="signup" class="tab-pane fade">
            <%= render 'users/new' %>
          </div>
          <div id="forget_password" class="tab-pane fade">
            <%= render 'password_reset/new' %>
            <a data-toggle="tab" href="#login">Log in</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
