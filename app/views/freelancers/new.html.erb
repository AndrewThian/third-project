<h1>Add Profile</h1>
<%= form_for :freelancer, url: profile_index_path do |f| %>
<p>
  <%= f.label :profession %><br>
  <%= f.text_field(:profession, {:class => 'form-control'}) %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_field(:description, {:class => 'form-control'}) %>
</p>

<p>
  <%= f.label :picture %><br>
  <%= f.text_field(:picture, {:class => 'form-control'}) %>
</p>

<p>
  <%= f.label :start_working_hours %><br>
  <%= f.time_field(:start_working_hours, {:class => 'form-control'}) %>
</p>

<p>
  <%= f.label :end_working_hours %><br>
  <%= f.time_field(:end_working_hours, {:class => 'form-control'}) %>
</p>

<p>
  <%= f.label :price_start %><br>
  <%= f.number_field(:price_start, {:class => 'form-control'}) %>
</p>

<p>
  <%= f.label :price_end %><br>
  <%= f.number_field(:price_end, {:class => 'form-control'}) %>
</p>

<p>Choose your schedule</p>
<% Date::DAYNAMES.each do |day| %>
  <%= check_box_tag('days[]', day) %>
  <%= f.label day %>
<% end %>

<p>
  <%= f.submit({:class => 'btn btn-primary'}) %>
</p>
<% end %>
